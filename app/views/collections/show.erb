<h2><%= @collection.capitalize %></h2>
<div id="collection">
  <% 1.upto(6) do |n| %>
    <% title = t("collections.#{@collection}.p#{n}") %>
    <%= link_to collections_showpic_path(:name => @collection, :id => "p#{n}"), {:title => title, :class => 'collection-thumb'} do %>
      <%= image_tag "/images/collections/#{@collection}/th/p#{n}.jpg", :alt => title %>
    <% end %>
  <% end %>
</div>

<script>
  Galleria.loadTheme('/javascripts/galleria/src/themes/classic/galleria.classic.js');
  $(function () {
    $('#collection').galleria({
      extend: function () {
        var that = this;
        $(document).bind('keydown', function (e) {
          if (e.target.type == 'textarea' || e.target.type == 'input') { return true; }

          if (e.keyCode == 39) { that.next(); return false; }
          else if (e.keyCode == 37) { that.prev(); return false; }
        });
      }
    });
  })
</script>