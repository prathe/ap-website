<h2><%= t('menu.collections') %></h2>
<div id="collections">
  <% %w{fall2010 feather_necklaces fur fur_necklace white_feather haute_couture fur_earrings blue christmas}.each do |token| %>
    <% collection = t("collections.index.#{token}") %>
    <% text_color =  t("collections.text_color.#{token}") %>
    <% background_color =  t("collections.background_color.#{token}") %>
    
    <div class="collection-thumb">
      <% link_to collections_show_path(:name => token), {:title => collection, :class => 'boxgrid captionfull', :style => "color: #{text_color};"} do %>
        <%= image_tag "/images/collections/index/#{token}.jpg", {:alt => collection} %>
        <div class="cover boxcaption" style="top: 200px; background-color: <%= background_color %>"><%= collection %></div>
      <% end %>
    </div>
    
  <% end %>
</div>

<script>
  $(function () {
  	//Full Caption Sliding (Hidden to Visible)
  	$('.boxgrid.captionfull').hover(function(){
  	  $("img", this).hide();
  		$(".cover", this).stop().animate({top:'0px'},{queue:false,duration:0});
  	}, function() {
  	  $("img", this).show();
  		$(".cover", this).stop().animate({top:'200px'},{queue:false,duration:0});
  	});
  });
</script>