<h2><%= t("collections.index.#{@collection}").capitalize %></h2>
<div id="collection">
  <% 1.upto(6) do |n| %>
    <% title = t("collections.#{@collection}.p#{n}") %>
    <%= link_to collections_showpic_path(:name => @collection, :id => "p#{n}"), {:title => title} do %>
      <%= image_tag "/images/collections/#{@collection}/med/p#{n}.jpg", :alt => title %>
    <% end %>
  <% end %>
</div>

<script>
  Galleria.loadTheme('/javascripts/galleria/src/themes/classic/galleria.classic.js');
  $(function () {
    
    $('#collection').galleria({

      show_info: false,
      
      on_image: function(img,thumb) {
        console.log(img);
        console.log(thumb);
      },
      
      extend: function () {
        var that = this;
        $(document).bind('keydown', function (e) {
          if (e.target.type == 'textarea' || e.target.type == 'input') { return true; }
  
          if (e.keyCode == 39) { that.next(); return false; }
          else if (e.keyCode == 37) { that.prev(); return false; }
        });
      }
    });
  });
</script>